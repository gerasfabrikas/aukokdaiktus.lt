{% extends 'base.html.twig' %}

{% block title %}Read {{ title }}{% endblock %}

{% block body %}
    <a href="{{ path('app_homepage') }}">Home</a>
    <a href="{{ path('article_show', { slug: 'any slug we want' }) }}">Self</a>
<h1>{{ title }}</h1>
<div>
    Article content
</div>

<h2>Comments ({{ comments|length }})</h2>
<ul>
    {% for comment in comments %}
        <li>{{ comment }}</li>
    {% endfor %}
</ul>
{% endblock %}